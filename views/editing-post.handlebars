{{!-- This is the view for Editing or Deleting a Post --}}
<div class="row">
  <div class="col-sm-6">
		<div class="card">
			<h3 class="card-header">Edit Post</h3>
			<form id="post-edit" class="card-body d-flex flex-column" action="/api/posts/update" method="POST">
				<div class="row mb-3">
					<div class="input-group col-4 mb-3">
					<input type="hidden" id="postId" name="postId" value="{{edit_id}}"/>
					<input style="width: 30em;" name="title" type="text" value="{{post.title}}"  class="form-control"/>
					</div>
					<textarea form="post-edit" id="post_content" name="post_content" class="form-input"></textarea>
				</div>			
				<div class="form-group col-11">
					<button type="submit" id="btnSubmit" class="btn btn-sm btn-primary">Update Post</button>
					<button type="button" class="btnDeletePost btn btn-sm btn-danger">Delete Post</button>
				</div>
			</form>
		</div>
	</div>	
</div>
<input type="hidden" id="txtField" value="{{post.post_content}}"/>
{{!-- this script is a hack to get the text from the post in database into the textarea tag field --}}
<script>
   var myText = document.getElementById("txtField").value;
   document.getElementById("post_content").value = myText;
</script>
{{!-- load the helper to delete a Post --}}
<script src="/js/deletePost.js"></script>