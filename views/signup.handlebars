{{!-- This is the template to render the user signup fields --}}
<div class="row justify-content-center">
  <div class="col-md-3">
  <div class="card my-3">
    <div class="card-body">
      <h3 class="card-title">Signup</h3>
      <form class="signup-form">
        <div class="mb-3">
          <label for="username-signup">Username:</label>
          <input class="form-control" type="text" id="username-signup" />
        </div>
        <div class="mb-3">
          <label for="email-signup">Email:</label>
          <input class="form-control" type="email" id="email-signup" />
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password-signup">Password:</label>
          <input class="form-control" type="password" id="password-signup" />
        </div>
        <div class="mb-3">
          <button class="btn btn-primary" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
  </div>
</div>
{{!-- load the helper script to do a user signup --}}
<script src="/js/signup.js"></script>