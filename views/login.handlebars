{{!-- This is the login field for existing users --}}
<div class="row justify-space-between-md">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title">Existing User Login</h3>
      <form class="login-form">
        <div class="mb-3">
          <label for="email-login">Email:</label>
          <input class="form-control" type="email" id="email-login" />
        </div>
        <div class="mb-3">
          <label for="password-login">Password:</label>
          <input class="form-control" type="password" id="password-login" />
        </div>
        <div class="mb-3">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </form>
    </div>
  </div>
  {{!-- This is the user signup fields --}}
  <div class="card">
    <div class="card-body">
      <h3 class="card-title">Signup</h3>
      <form class="signup-form">
        <div class="mb-3">
          <label for="username-signup">Username:</label>
          <input class="form-control" type="text" id="username-signup" />
        </div>
        <div class="mb-3">
          <label for="email-signup">Email:</label>
          <input class="form-control" type="email" id="email-signup" />
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password-signup">Password:</label>
          <input class="form-control" type="password" id="password-signup" />
        </div>
        <div class="mb-3">
          <button class="btn btn-primary" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>
